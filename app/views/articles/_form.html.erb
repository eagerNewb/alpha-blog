<% if @article.errors.any? %> 
<h2>The following errors prevented the article from getting created:</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
	
	<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @article do |art| %>
	<p>
		<%= art.label :title %><br/>
		<%= art.text_field :title %>
	</p>
	<p>
		<%= art.label :description %><br/>
		<%= art.text_area :description %>
	</p>
	<p>
		<%= art.submit %>
	</p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>